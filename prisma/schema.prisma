generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model UserSession {
  id            String   @id @default(uuid())
  user_id       String
  username      String
  avatar        String?
  access_token  String
  refresh_token String
  expires_at    DateTime
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@index([user_id])
}
